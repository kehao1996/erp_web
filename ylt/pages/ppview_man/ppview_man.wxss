/* pages/ppview/ppview.wxss */
page{
  background: #f6f7fa;
}
/* 白胎采购 */
.wfpurchase{
  background-color: #Fff;
  border-radius: 30rpx;
  padding: 20rpx;
  margin: 20rpx;
}
.wfp_tile{
  width: 631rpx;
  height: 14rpx;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image:url('data:image/png;base64,');
  background-size: 100% 100%;
}
.wfp_tile image{
  display: block;
  width: 39rpx;
  height: 42rpx;
  margin-left: 10rpx;
}
.wfp_tile view{
  font-size: 42rpx;
  font-weight: bold;
  color: #081863;
  letter-spacing:10rpx;
  margin-left: 20rpx;
  line-height: 42rpx;
}
.wfp_item{
  background-color: #f6f7fa;
  border-radius: 30rpx;
  padding: 20rpx;
  border: 1rpx solid #e1e6ff;
}
.wfp_item_i{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.wfp_item_i image{
  width: 47rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.wfp_item_i input{ 
  display: block;
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #d8dfff;
  border-radius: 70rpx;
  background-color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  box-sizing: border-box;
}
.wfp_item_name{
  width: 36%;
  font-size: 32rpx;
  color: #081863;
}
.wfp_item_btn{
  font-size: 32rpx;
  color:#081863;
  font-weight: bold;
  letter-spacing:5rpx;
  padding: 20rpx 5rpx 20rpx 24rpx;
}
.ppv_iput_name{
  position: relative;
}
.ppv_jiaji{
  width: 100%;
  position: absolute;
  top: 100%;
  color: #a62e2e;
  font-size: 28rpx;
  text-align: center;
}

/* 质检 */
.qu_testing{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42rpx;
  font-weight: bold;
  color: #081863;
  letter-spacing:10rpx;
  line-height: 42rpx;
}
.qu_testing image{
  width: 50rpx;
  height: 50rpx;
} 
.qu_testing view{
  margin-left: 20rpx;
}
.qutest_item{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.qutest_item_text{
  width: 26%;
  font-size: 32rpx;
  color: #081863;
}
.qutest_item_input{
  width: 74%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.qutest_item_input input{
  display: block;
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #d8dfff;
  border-radius: 70rpx;
  background-color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  box-sizing: border-box;
}

.qutest_item_btn{
  width: 126rpx;
  height: 66rpx;
  background: #081863;
  color: #fff;
  line-height: 66rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 6rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
.qutest_item_left{
  display: flex;
  align-items: center;
}
.qutest_item_left>view{
  width: 45%;
  font-size: 32rpx;
  color: #081863;
}
.qutest_item_left>input{
  display: block;
  width: 55%;
  height: 70rpx;
  border: 1rpx solid #d8dfff;
  border-radius: 70rpx;
  background-color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  box-sizing: border-box;
}
.right{
  margin-left: 20rpx;
}


