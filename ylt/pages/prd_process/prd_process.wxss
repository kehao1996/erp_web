/* pages/prd_process/prd_process.wxss */
page{
  background: #f6f7fa;
}
/* 图示 */
.illustration{
  background-color: #fff;
  border: 1rpx solid #dce2ff;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.illustration_img{
  display: block;
  margin: 0 auto;
  width: 631rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}
.illustration_b{
  height: 597rpx;
  border: 1rpx solid #dce2ff;
  border-radius: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}
 .illustration_b_img{
  height:597rpx;
} 

/* 产品 */
.preitem{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 2rpx 20rpx 60rpx 20rpx;
  box-sizing: border-box;
}
.preitem_i{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.preitem_i image{
  width: 59rpx;
  height: 62rpx;
}
.preitem_i_name{
  font-size: 32rpx;
  color: #080163;
  margin-left: 15rpx;
  margin-right: 10rpx;
}
.preitem_i_input{
  width: 450rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.preitem_i_input input{
  width: 100%;
  height: 70rpx;
  color: #999;
  font-size: 32rpx;
  border: 1rpx solid #dce2ff;
  border-radius: 60rpx;
  text-align: center;
}
.preitem_i_btn{
  width: 158rpx;
  height: 70rpx;
  background-color: #243895;
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 60rpx;
  margin-left: 16rpx;
}
.preitem_i_y{
  position: relative;
}
.preitem_i_n{
  width: 90rpx;
  font-size: 32rpx;
  color: #b22f2f;
  position: absolute;
  bottom: -100%;
  left: 50%;
  transform: translate(-50%);
}