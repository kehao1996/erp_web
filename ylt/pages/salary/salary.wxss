/* pages/salary/salary.wxss */
page{
  background: #f6f7fa;
}

.salary_block{}
.sal_item{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.sal_item_name{
  font-size: 46rpx;
  font-weight: bold;
  color: #081863;
  text-align: center;
  margin: 10rpx 0 30rpx 0;
}
.sal_item_s{
  background-color: #ecefff;
  border-radius: 20rpx;
  padding: 20rpx;
  padding-bottom: 2rpx;
  box-sizing: border-box;
}
.sal_item_a{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.sal_item_a image{
  width: 59rpx;
  height: 62rpx;
}
.sal_item_a .sal_item_text{
  width: 200rpx;
  font-size: 32rpx;
  color: #080163;
  margin-left: 15rpx;
  margin-right: 10rpx;
}
.sal_item_a input{
  background-color: #fff;
  height: 70rpx;
  color: #999;
  font-size: 32rpx;
  border: 1rpx solid #dce2ff;
  border-radius: 60rpx;
  text-align: center;
}